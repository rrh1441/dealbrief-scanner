{
  "name": "dealbrief-scanner",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm --filter @dealbrief/workers dev\" \"pnpm --filter @dealbrief/api dev\"",
    "dev:workers": "pnpm --filter @dealbrief/workers dev",
    "dev:api": "pnpm --filter @dealbrief/api dev",
    "build": "pnpm --filter @dealbrief/workers build && pnpm --filter @dealbrief/api build",
    "build:workers": "pnpm --filter @dealbrief/workers build",
    "build:api": "pnpm --filter @dealbrief/api build",
    "start": "concurrently \"pnpm --filter @dealbrief/workers start\" \"pnpm --filter @dealbrief/api start\"",
    "start:workers": "pnpm --filter @dealbrief/workers start",
    "start:api": "pnpm --filter @dealbrief/api start",
    "clean": "rm -rf node_modules dist .next && pnpm -r exec rm -rf node_modules dist .next"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@types/node": "^22.10.2"
  }
}